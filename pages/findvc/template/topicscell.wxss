.videoList>.videoListBox {
    width: 44%;
    height: 305rpx;
    box-shadow: 0px 3px 6px 0px rgba(71,71,71,0.1);
    border-radius: 10rpx;
    margin: 0 0 30rpx 30rpx;
    float: left;
    overflow: hidden;
}


.videoListImg {
    width: 100%;
    height: 215rpx;
    border-radius: 10rpx 10rpx 0 0;
    display:flex; justify-content:center; align-items:center;
      background: #000;
}

.videoListImg>image {
    border-radius: 10rpx 10rpx 0 0;
}

.videoListImg>image {
    width: 100%;
    height: 100%;

}
