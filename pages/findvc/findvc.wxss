    height: 100%;
    line-height: 75rpx;
    flex: 1;
    text-align: center;
}

#affix .active {
    position: relative;
}

.active::after {
    position: absolute;
    content: "";
    width: 60rpx;
    height: 4rpx;
    border-radius: 4rpx;
    left: 50%;
    bottom: 0;
    margin-left: -30rpx;
}


 .loading{  
    padding: 10rpx;  
    text-align: center;  
  }  
  .loading:before{  
   display: inline-block;  
   margin-right: 5rpx;  
   vertical-align: middle;  
   content: '';  
   width: 40rpx;  
   height: 40rpx;  
   /* background: url(../../images/icon-loading.png) no-repeat;   */
   background-size: contain;  
   animation: rotate 1s linear infinite;  
 }  
 .loading.complete:before{  
   display: none;  
 }  