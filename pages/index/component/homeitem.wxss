
.card {
position:relative;
padding:5px 15px;
font-size:12px;
color:#333;
box-sizing:border-box;
background-color:#fafafa;

}
.card__header {
display:-webkit-flex;
display:flex;
height: 90px;
}
.card__thumb {
position:relative;
width:90px;
height:90px;
margin-right:10px;
-webkit-flex:none;
flex:none;
/* background-color: red; */

}

.lineNBN{
height: 2rpx;
background-color:#EBEBEB;
width:100%;
margin-top:10px;


}
.card__content {
position:relative;
-webkit-flex:1;
flex:1;
height:70px;
min-width:0;

}
.card__img {
width:100%;
height:100%;
border-radius:4px;


}

.card__title {
max-height:32px;
line-height:16px;
font-weight:700;
margin-top: 5px;
font-size: 16px;
margin-right:20px;
overflow:hidden;text-overflow:ellipsis; white-space:nowrap;
/* overflow:hidden;
text-overflow: ellipsis;
display:-webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical; */
}
.card__title__home{
  /* max-height:42px; */
/* line-height:16px; */
font-weight:700;
margin-top: 5px;
font-size: 16px;

  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
align-content: center;
}
.card__desc,.card__title {
word-break:break-all;

}
.multi-ellipsis--l2 {
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;

}
.card__bottom {
position:absolute;
bottom:15px;
left:120px;
right:20px;
line-height:18px;

}
.card__price {
display:inline-block;
color:#000;
font-size: 12px;
text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;

}

.card__price__name
{
display:inline-block;
color:#000;
