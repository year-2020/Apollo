
.card {
position:relative;
padding:5px 15px;
font-size:12px;
color:#333;
box-sizing:border-box;
background-color:white;

}
.card__header {
display:-webkit-flex;
display:flex;
height: 100px;
}

.card__thumb {
position:relative;
width:90px;
height:90px;
margin-right:10px;
-webkit-flex:none;
flex:none;
/* background-color: red; */

}

.card__content {
position:relative;
-webkit-flex:1;
flex:1;
height:90px;
min-width:0;
background: white;

}
.card__img {
width:100%;
height:100%;

}

.card__title {
max-height:32px;
line-height:16px;
font-weight:700;
margin-top: 2px;
width: 140px;

}

.sc__title{
 width:140px;
margin-top:20rpx;
height:15px;
color:#999999;
font-size:12px;

}
.card__desc,.card__title {
word-break:break-all;

}
.multi-ellipsis--l2 {
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;

}
.card__bottom {
position:absolute;
margin-top:57px;
left:0;
width:100%;
line-height:18px;
height: 18px;

}
.card__price {
color:#000;
font-size: 12px;
text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
align-content: center;
}
.card__price em{
    font-size: 10px;
}

.card__num {
float:right;
position: relative;
bottom: -3px;

}

