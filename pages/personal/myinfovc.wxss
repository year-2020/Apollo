}
.fixed {
    position: fixed;
    top: 0;
    z-index: 99999;
}
#affix {
    width: 100%;
    height: 75rpx;
    background: #fff;
    display: flex;
}

.scrollviewitem {
    font-size: 30rpx;
    color: #999;
    height: 100%;
    line-height: 75rpx;
    flex: 1;
    text-align: center;
}

#affix .active {
    position: relative;
}

.active::after {
    position: absolute;
    content: "";
    width: 60rpx;
    height: 4rpx;
    border-radius: 4rpx;
    left: 50%;
    bottom: 0;
    margin-left: -30rpx;
}
