
<!--index.wxml-->
<view class="content">
  <view style="flex:3;width:100%;">
      <view class='myinfo'>
          <view class='hline'></view>
          <view class='right-container'>
             <view class='name-label'>{{mycardData.name}}·<em>{{mycardData.title}}</em></view>
              <view class='company-label'>{{mycardData.dept}}</view>
          </view>
         
            <view class='info-row'>
              <image class='ico-info' src='/static/images/phone.png'></image>
              <view class='phone-num'>{{mycardData.phone}}</view>
            </view>
             <view class='info-row'>
              <image class='ico-info' src='/static/images/info-local.png'></image>
              <view class='phone-num'>{{mycardData.address}}</view>
            </view>
             <!-- <view class='info-row'>
              <image class='ico-info' src='/static/images/info-telephone.png'></image>
              <view class='phone-num'>{{mycardData.phone}}</view>
            </view> -->
             <view class='info-row'>
              <image class='ico-info' src='/static/images/info-yx.jpg'></image>
              <view class='phone-num'>{{mycardData.email}}</view>
            </view>
             <view class='info-row'>
              <image class='ico-info' src='/static/images/wechat-info.jpg'></image>
              <view class='phone-num'>{{mycardData.name}}</view>
            </view>
      </view>
  </view>
  <view style="flex:4;width:100%;">
      <view class='info-card'>
        <view class='title-v'>
          <view class='t-mp'>我的名片</view>
          <image class='edit-info' src='/static/images/wechat-info.jpg'></image>  
        </view>
          <view class='left-container'>
             <view class='leftname-label'>{{mycardData.name}}·<em>{{mycardData.title}}</em></view>
              <view class='leftcompany-label'>{{mycardData.dept}}</view>
          </view>
              <view class='info-row'>
              <image class='ico-info' src='/static/images/phone.png'></image>
              <view class='phone-num'>{{mycardData.phone}}</view>
            </view>
             <view class='info-row'>
              <image class='ico-info' src='/static/images/info-local.png'></image>
              <view class='phone-num'>{{mycardData.address}}</view>
            </view>
             <!-- <view class='info-row'>
              <image class='ico-info' src='/static/images/info-telephone.png'></image>
              <view class='phone-num'>0771-12345678</view>
            </view> -->
             <view class='info-row'>
              <image class='ico-info' src='/static/images/info-yx.jpg'></image>
              <view class='phone-num'>{{mycardData.email}}</view>
            </view>
             <view class='info-row'>
              <image class='ico-info' src='/static/images/wechat-info.jpg'></image>
              <view class='phone-num'>{{mycardData.name}}</view>
            </view>

      </view>
  </view>
  <view style="flex:1;width:100%;flex-direction: row;display:flex;">
  
  <button class='edit-card' bindtap='jumpToEdit'>修改</button>
  <button class='sendCard'>发送本张名片</button>
  </view>
</view>


