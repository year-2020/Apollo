/* pages/personal/cooper.wxss */
page{
  background: #F5F5F5;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  height: 80%;
  overflow: hidden;
  position: fixed;
  top: 10%;
  left: 0;
  z-index: 9999;
  text-align: center;
}
.modal-dialog .img{
  width: 238px;
  height: 400px;
  display: inline-block;
}
.pageCooper{
  padding-top: 20px;
}
.pageCooper .van-collapse-item__content{
  background: #F5F5F5;
}
.pageCooper .i-cell{
  background: none;
}
.pageCooper .van-collapse-item{
  margin-bottom: 10px;
}
.pageCooper .van-icon{
  margin: 0px;
}
.pageCooper .van-radio{
  padding: 5px 0;
  font-size: 14px;
}
.pageCooper .van-radio__label{
  font-size: 14px;
}
.pageCooper button{
  height: 50px;
  line-height: 50px;
  color: #fff;
  font-size: 20px;
  background: #d7ca99;
  border: none;
  margin: 20px 30px;
}